[merge]
  tool = ediff

[diff]
        tool = ediff
        guitool = ediff

[difftool "ediff"]
        cmd = ediff $LOCAL $REMOTE $MERGED
        
[mergetool "ediff"]
  cmd = emacsclient -c -a \"\"  --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"

[core]
	editor = emacsclient -t -a=\\\"\\\"
[push]
	default = simple
[credential]
	helper = osxkeychain
